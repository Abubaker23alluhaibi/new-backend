# NODE_ENV = "production"
# PORT = "10000"
# MONGO_URI = "your_mongodb_connection_string"
# JWT_SECRET = "your_jwt_secret"
# CORS_ORIGIN = "your_frontend_domain"
# API_URL = "your_backend_domain"
