[build]
builder = "nixpacks"

[deploy]
startCommand = "npm start"
healthcheckPath = "/"
healthcheckTimeout = 30
restartPolicyType = "ON_FAILURE"
restartPolicyMaxRetries = 3

# ⚠️ لا تضع المتغيرات الحساسة هنا!
# استخدم Railway Environment Variables بدلاً من ذلك

# مثال للمتغيرات (لا تضع القيم الحقيقية):
