# Production Environment Variables for TabibiQ Backend
PORT=10000
NODE_ENV=production

# Database Configuration (MongoDB Atlas)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/tabibiq?retryWrites=true&w=majority

# JWT Secret (Strong secret for production)
JWT_SECRET=your_jwt_secret_here

# CORS Configuration for Production
CORS_ORIGIN=https://your-frontend-domain.vercel.app

# API URL for the backend
API_URL=https://your-backend-domain.railway.app

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Cloudinary Configuration (Optional - for permanent image storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Database Collections
DOCTORS_COLLECTION=doctors
USERS_COLLECTION=users
ADMINS_COLLECTION=admins
APPOINTMENTS_COLLECTION=appointments
SPECIALTIES_COLLECTION=specialties
REVIEWS_COLLECTION=reviews
NOTIFICATIONS_COLLECTION=notifications

# Email Configuration (if needed)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# SMS Configuration (if needed)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number 